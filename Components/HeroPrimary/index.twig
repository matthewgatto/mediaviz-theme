<flynt-component name="HeroPrimary">
	<div class="flex justify-center hero-container">
		<div class="container relative z-10 flex flex-col space-y-5 text-center lg:mx-10">
			<h1 class="title">{{ title }}</h1>
			<img class="hero-image" src="{{ illustration }}">
			<span class="text-xl">{{ subtitle }}</span>
			{% if show_request_demo_form %}
				{# will need to move it to components later #}
				<form>
					<label class="mt-5 p-1.5 rounded bg-dark/45 border border-[#7298D6] text-white inline-block">
						<input class="pl-6 pr-4 lg:pr-20 placeholder:text-[#C2D9FF] bg-transparent focus:outline-none " placeholder="{{ form_label }}"/>
						<button class="px-7 py-2.5 rounded bg-secondary">{{ form_submit_text }}</button>
					</label>
				</form>
			{% endif %}
		</div>
		<div class="ellipses">
			{% for i in 1..3 %}
				<div class="ellipse"></div>
			{% endfor %}
		</div>
	</div>
</flynt-component>
